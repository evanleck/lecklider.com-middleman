<div class='container'>
  <h1>Archive for
    <% case page_type
       when 'day' %>
      <%= Date.new(year, month, day).strftime('%b %e %Y') %>
    <% when 'month' %>
      <%= Date.new(year, month, 1).strftime('%b %Y') %>
    <% when 'year' %>
      <%= year %>
    <% end %>
  </h1>

  <ul class='posts' id='post-list'>
    <% articles.each do |article| %>
      <li>
        <%= link_to article.title, article %>
        <span class='date'>
          <%= article.date.strftime('%b %d, %Y') %>
        </span>
      </li>
    <% end %>
  </ul>
</div>

<%= partial 'aside' %>
